<?php

namespace Vf\SNPBundle\Entity;

use Doctrine\ORM\EntityRepository;

/**
 * MembreRepository
 *
 * This class was generated by the Doctrine ORM. Add your own custom
 * repository methods below.
 */
class MembreRepository extends \Doctrine\ORM\EntityRepository
{
    public function findGardiens()
	{
	    $qb = $this->createQueryBuilder('m');
        $qb->where('m.nomPlanGarde != :nomPlanGarde')
        ->setParameter('nomPlanGarde', '')
		->andWhere('m.garde = :garde')
        ->setParameter('garde', 1)
        ->orderBy('m.garde', 'ASC')
        ;
        return $qb->getQuery()->getResult() ;
	}
}
